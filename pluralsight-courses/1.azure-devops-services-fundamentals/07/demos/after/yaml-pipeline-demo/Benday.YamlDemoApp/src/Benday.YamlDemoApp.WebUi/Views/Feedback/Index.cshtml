@model IEnumerable<Benday.YamlDemoApp.Api.DomainModels.Feedback>

@{
ViewBag.Title = "Index";
}

    <h2>
    feedback list
    </h2>

    <p>
    @Html.ActionLink("Search", "Search") | @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                feedback type
                </th>
                <th>
                sentiment
                </th>
                <th>
                notification subject
                </th>
                <th>
                message
                </th>
                <th>
                username
                </th>
                <th>
                first name
                </th>
                <th>
                last name
                </th>
                <th>
                yes, I'd like a reply
                </th>
            
                <th>
                </th>
            </tr>
        </thead>
    
    @foreach (var item in Model) {
        <tr class="clickable-tr" onclick="handleRowClick(this)" data-href="@Url.Action("Edit", new { id = item.Id })">
            <td>
            @Html.DisplayFor(modelItem => item.FeedbackType)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.Sentiment)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.FeedbackText)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.IsContactRequest)
            </td>
        
            <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>