@model IEnumerable<Benday.YamlDemoApp.Api.DomainModels.Lookup>

@{
ViewBag.Title = "Index";
}

    <h2>
    lookup list
    </h2>

    <p>
    @Html.ActionLink("Search", "Search") | @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                Display Order
                </th>
                <th>
                Lookup Type
                </th>
                <th>
                Lookup Key
                </th>
                <th>
                Lookup Value
                </th>
            
                <th>
                </th>
            </tr>
        </thead>
    
    @foreach (var item in Model) {
        <tr class="clickable-tr" onclick="handleRowClick(this)" data-href="@Url.Action("Edit", new { id = item.Id })">
            <td>
            @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.LookupType)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.LookupKey)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.LookupValue)
            </td>
        
            <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>