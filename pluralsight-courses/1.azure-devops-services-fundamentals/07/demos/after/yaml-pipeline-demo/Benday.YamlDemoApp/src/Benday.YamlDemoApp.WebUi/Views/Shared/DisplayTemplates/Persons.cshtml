@model IEnumerable<Benday.YamlDemoApp.Api.DomainModels.Person>

@{
ViewBag.Title = "Index";
}

    <table class="table table-striped table-hover">
        <thead class="thead-light">
        
            <tr>
                <th>
                first name
                </th>
                <th>
                last name
                </th>
                <th>
                phone number
                </th>
                <th>
                email address
                </th>
            
                <th>
                </th>
            </tr>
        </thead>
    @foreach (var item in Model) {
        <tr>
            <td>
            @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
        
            <td>
            @Html.ActionLink("Edit", "Edit", "Person", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", "Person", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", "Person", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>