@model IEnumerable<Benday.YamlDemoApp.Api.DomainModels.ConfigurationItem>

@{
ViewBag.Title = "Index";
}

    <table class="table table-striped table-hover">
        <thead class="thead-light">
        
            <tr>
                <th>
                category
                </th>
                <th>
                configuration key
                </th>
                <th>
                description
                </th>
                <th>
                configuration value
                </th>
            
                <th>
                </th>
            </tr>
        </thead>
    @foreach (var item in Model) {
        <tr>
            <td>
            @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.ConfigurationKey)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.ConfigurationValue)
            </td>
        
            <td>
            @Html.ActionLink("Edit", "Edit", "ConfigurationItem", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", "ConfigurationItem", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", "ConfigurationItem", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>